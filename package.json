{
  "name": "trooba",
  "version": "3.0.0",
  "description": "a simple pipe to build service client and backend frameworks",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    }
  },
  "directories": {
    "test": "test"
  },
  "contributors": [
    "cdaringe <cdaringe@gmail.com>"
  ],
  "scripts": {
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "run-p build:*",
    "format": "prettier --write .",
    "test": "./node_modules/.bin/mocha test/index test/readme test/index-4.x",
    "test-0.12": "./node_modules/.bin/mocha test/index test/readme",
    "test-coverage": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trooba/trooba.git"
  },
  "keywords": [
    "pipe",
    "stream",
    "service",
    "client"
  ],
  "author": "Dmytro Semenov <dimichgh@yahoo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trooba/trooba/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "https://github.com/trooba/trooba#readme",
  "devDependencies": {
    "@types/node": "22.9.0",
    "mocha": "^10.0.0",
    "nock": "^13.2.8",
    "npm-run-all2": "7.0.1",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "async": "3.2.6"
  }
}
